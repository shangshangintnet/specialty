.container {
  width: 100%;
  height: 100%
}

.video-swiper {
  width: 100%;
  height: 100%
}

.video_item {
  height: 100%;
  width: 100%;
  z-index: 1;
}

.video_info {
  width: 100%;
  height: 900rpx;
  margin-top: auto;
}

.img_1 {
  margin-left: auto;
  margin-right: 40rpx;
  border-radius: 40rpx;
}

.img_2 {
  margin-top: 40rpx;
  margin-left: auto;
  margin-right: 50rpx;
}

.img_3 {
  margin-top: 40rpx;
  margin-left: auto;
  margin-right: 40rpx;
}

.icon_1 {
  width: 80rpx;
  height: 80rpx;
}

.icon_2 {
  width: 60rpx;
  height: 60rpx;
}

.icon_3 {
  width: 32rpx;
  height: 32rpx;
  margin-top: -20rpx;
  margin-left: auto;
  margin-right: 64rpx;
}

.info {
  word-break: break-all;
  word-wrap: break-word;
  white-space: normal;
  line-height: 40rpx;
}

.share {
  opacity: 0;
  width: 60rpx;
  height: 60rpx;
  margin-top: -60rpx;
  margin-left: auto;
  margin-right: 50rpx;
}

.store {
  width: 180rpx;
  height: 180rpx;
  align-items: center;
  justify-content: center;
}

.store_icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 1rpx solid #FF1A70;
}

.store_txt {
  color: white;
  font-size: 26rpx;
  text-align: center;
  width: 180rpx;
  margin-top: 10rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mask {
  position: fixed;
  top: 200px;
  left: 0;
  background-color: rgba(red, green, blue, 0.1);
  z-index: 1000;
}