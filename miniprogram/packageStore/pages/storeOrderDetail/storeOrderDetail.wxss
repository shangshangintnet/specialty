/* miniprogram/pages/order/order_detail/order_detail.wxss */

.order_desc {
  margin: 10rpx;
}

.icon_order {
  width: 60rpx;
  height: 60rpx;
}

.icon_order_address {
  width: 60rpx;
  height: 60rpx;
}

.order_waiting_txt {
  width: 500rpx;
  margin-top: 40rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.shop_section {
  margin: 10rpx;
  padding: 16rpx;
  padding-top: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 10rpx 5rpx #dddddd;
}

.checkbox {
  margin-left: 10rpx;
  margin-top: 8rpx;
  margin-right: 20rpx;
}

.shop_icon {
  margin-top: 8rpx;
  margin-right: 20rpx;
}

.goods_pic {
  width: 156rpx;
  height: 156rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.goods_txt {
  width: 500rpx;
}

.goods_section {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.calc {
  padding: 8rpx 20rpx;
  text-align: center;
}

.cart_result {
  position: fixed;
  bottom: 0rpx;
  height: 90rpx;
  width: 750rpx;
  background: white;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.confirm_section {
  width: 168rpx;
  height: 148rpx;
  padding: 0;
  margin-top: -8rpx;
  margin-right: -8rpx;

}

.order_bar {
  padding: 16rpx 0;
}

.order_bar text {
  width: 350rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.order_price {
  padding: 16rpx 0;
}

.order_price text {
  width: 350rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: right;
}

.express_info {
  margin: 10rpx;
  padding: 20rpx;
}

.span {
  font-size: 28rpx;
  padding: 14rpx 0;
  color: gray;
}

.express_button {
  width: 750rpx;
  text-align: center;
  padding: 16rpx 0rpx;
}

.cancel {
  border-radius: 20rpx;
  border: 1px solid gainsboro;
}

.order_btn {
  width: 160rpx;
  height: 50rpx;
  text-align: center;
  align-items: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  border: 1rpx solid #079547;
  margin-right: 30rpx;
}

.input_txt {
  color: #606060;
  font-size: 28rpx;
  text-align: left;
  width: 450rpx;
  margin-left: 20rpx;
}

.picker {
  color: #606060;
  font-size: 28rpx;
  width: 450rpx;
  height: 80rpx;
  text-align: left;
  line-height: 80rpx;
  margin-left: 20rpx;
}

.confirmLogdata {
  height: 50rpx;
  border-radius: 25rpx;
  width: 200rpx;
  background-color: #079547;
  color: #ffffff;
  font-size: 32rpx;
  margin: 30rpx 225rpx;
  line-height: 50rpx;
  text-align: center;
}