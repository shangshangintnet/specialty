/* 顶部导航 */
.status-bar {
  width: 100%;
  z-index: 99999;
  position: fixed;
  top: 0;
  background: linear-gradient(60deg, #006325, #023B16);
}

.app_icon {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
}

.icon_search {
  width: 32rpx;
  height: 32rpx;
  margin: 14rpx;
  margin-left: 20rpx;
}

.icon_back {
  width: 16rpx;
  height: 32rpx;
  margin: 24rpx;
  margin-top: 28rpx;
}

.icon_rubbish {
  width: 28rpx;
  height: 32rpx;
  margin: 14rpx;
  margin-right: 60rpx;
}

.search {
  color: #494949;
}

.search_fake_bar {
  width: 670rpx;
  margin-top: 20rpx;
  height: 52rpx;
  background-color: white;
  border-radius: 40rpx;
  overflow: hidden;
}

.tag_title {
  line-height: 60rpx;
  width: 750rpx;
  padding: 20rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
}

.tag_justify {
  margin-left: 10rpx;
}

.tag_square {
  line-height: 32rpx;
  font-size: 32rpx;
  padding: 16rpx 20rpx;
  margin: 0 16rpx;
  border-radius: 40rpx;
  background-color: white;
  margin-bottom: 20rpx;
}

.search_finish {
  position: absolute;
  top: 0;
  left: 0;
}


.info_block {
  padding: 0rpx 24rpx 24rpx 30rpx;
  font-size: 32rpx;
}

.search_category {
  width: 375rpx;
  padding: 0rpx 10rpx 10rpx 10rpx;
}

.selected {
  color: #0ACC61;
}

.order_title {
  height: 40rpx;
  margin-top: 16rpx;
  margin-left: 116rpx;
  width: 400rpx;
  text-align: center;
  vertical-align: middle;
  color: white;
  font-size: 36rpx;
  font-weight: lighter;
}

.condition_sort {
  padding: 24rpx 0rpx;
  text-align: center;
  width: 250rpx;
  color: white;
  font-weight: lighter;
}

.checkbox {
  margin-left: 10rpx;
  margin-top: 8rpx;
  margin-right: 20rpx;
}

.shop_icon {
  margin-top: 8rpx;
  margin-right: 20rpx;
}

.goods_pic {
  width: 156rpx;
  height: 156rpx;
  margin: 0 20rpx;
}

.goods_txt {
  width: 520rpx;
}

.status text {
  float: right;
  text-align: center;
  font-size: 24rpx;
  width: 120rpx;
  padding: 4rpx 6rpx;
  margin: 0rpx 2rpx;
  margin-top: 16rpx;
  border-radius: 20rpx;
  border: 1px solid #079547;
}

.goods_section {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-top: 1px solid whitesmoke;
}

.calc_minus {
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
  border: 1px solid gainsboro;
}

.calc_num {}

.calc_add {
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  border: 1px solid gainsboro;
}

.calc {
  padding: 8rpx 20rpx;
  text-align: center;
}

.cart_result {
  position: fixed;
  bottom: 0rpx;
  height: 102rpx;
  width: 750rpx;
  background: white;
  vertical-align: center;
  overflow: hidden;
}

.confirm_section {
  width: 168rpx;
  height: 148rpx;
  padding: 0;
  margin-top: -8rpx;
  margin-right: -8rpx;

}

.shop_section {
  margin: 10rpx;
  padding: 16rpx;
  padding-top: 20rpx;
  padding-bottom: 0;
  border-radius: 15rpx;
  box-shadow: 0rpx 10rpx 5rpx #dddddd;
}

.selected {
  color: #0ACC61;
  border-bottom: 8rpx solid #0ACC61;
}

.order_bar {
  padding: 16rpx 0;
}


.order_bar text {
  width: 350rpx;
  padding: 16rpx 12rpx;
  float: left;
}

.order_price {
  padding: 16rpx 0;
  text-align: right;
  justify-content: right;

}

.order_price text {
  width: 470rpx;
  padding: 16rpx 12rpx;
  float: right;
  text-align: right;
}

.info_section {
  margin: 10rpx;
  width: 690rpx;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
}