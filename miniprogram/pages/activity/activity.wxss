/* miniprogram/pages/activity/activity.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.rules {
  width: 170rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 100px;
}

.rules_back {
  width: 170rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 145px;
}

.swiper {
  height: 750rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.swiper video {
  height: 100%;
  width: 100%;
}

.bottombtn {
  margin: 0px 10px 0px 10px;
  background-color: #d24a58;
  color: white;
}

/*detail样式*/

.tianmao {
  background-color: #ffe6a3;
  height: 100rpx;
}

.ar_cont {
  padding: 20rpx 20rpx;
  font-size: 30rpx;
  background: #fff;
  margin-bottom: 0rpx;
  line-height: 45rpx;
  color: #666;
}

.ar_cont_h1 {
  border-left: 10rpx solid #006325;
  line-height: 40rpx;
  height: 40rpx;
  color: black;
}

.ar_cont .ar_cont_price {
  margin-left: 30rpx;
}

.ar_green {
  color: #079547;
}

.ar_block p {
  margin-left: 20rpx;
}

.ar_line {
  width: 100%;
  height: 2rpx;
  background: #ddd;
  margin: 15rpx 0rpx;
}

.ar_book {
  background: linear-gradient(60deg, rgb(255, 155, 40), rgb(251, 102, 23));
  font-size: 30rpx;
  color: #fff;
  margin: 0rpx 0rpx -15rpx 0rpx;
  border-radius: 0;
}

.ar_block {
  margin-bottom: 50rpx;
}

.time_section {
  margin-top: -15rpx;
  margin-left: 18rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 50px;
}

.help-content {
  font-size: 26rpx;
  opacity: 0.9;
  text-indent: 0rpx;
  padding-left: 0rpx;
  text-align: justify;
  line-height: 30rpx;
}

.time_block {
  width: 60rpx;
  height: 60rpx;
  color: white;
  text-align: left;
  text-indent: 10rpx;
  background-size: contain;
  font-size: 30rpx;
  margin-top: 10rpx;
  background-image: url("data:image/png;base64,");
}

.clock_txt {
  color: white;
  margin-top: -12px;
}

