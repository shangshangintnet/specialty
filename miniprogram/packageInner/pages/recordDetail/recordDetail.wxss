/* packageInner/pages/recordDetail/recordDetail.wxss */
.page {
  background-color: #ffffff;
}

/* 顶部导航 */
.title_bar {
  width: 100%;
  z-index: 200;
  position: fixed;
  top: 0;
  background: linear-gradient(180deg, #ffffff, #f8f8f8);
}

.type_slt_1 {
  width: 120rpx;
  height: 56rpx;
  margin-right: 20rpx;
  background-color: #9AE0B7;
  color: #347A4C;
  border: solid 1rpx #6CD096;
  border-radius: 8rpx;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
}

.type_slt_0 {
  width: 120rpx;
  height: 56rpx;
  margin-right: 20rpx;
  background-color: #FFEBE2;
  color: #FF600F;
  border: solid 1rpx #FF600F;
  border-radius: 8rpx;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
}

.type_slt_2 {
  width: 120rpx;
  height: 56rpx;
  margin-right: 20rpx;
