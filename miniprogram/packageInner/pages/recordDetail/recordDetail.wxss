}

.type_nor {
  width: 120rpx;
  height: 56rpx;
  margin-right: 20rpx;
  background-color: #EEEEEE;
  color: #A4A4A4;
  border-radius: 8rpx;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
}

.price {
  align-items: center;
  margin-left: 40rpx;
  height: 100rpx;
  margin-top: 20rpx;
  border-bottom: solid 2rpx #dddddd;
  width: 670rpx;
}

.input_txt {
  font-size: 60rpx;
  text-align: left;
  margin-left: 20rpx;
  width: 650rpx;
  height: 100rpx;
}

.icon_section {
  flex-wrap: wrap;
  margin: 20rpx 0rpx;
}

.icon_item {
  margin: 10rpx 0rpx;
  align-items: center;
  width: 125rpx;
  height: 130rpx;
}

.desc {
  align-items: center;
}

.desc_txt {
  margin-left: 40rpx;
  background-color: #f3f3f3;
  height: 80rpx;
  width: 480rpx;
  padding-left: 20rpx;
  line-height: 80rpx;
}

.time {
  margin-left: 10rpx;
  width: 180rpx;
  height: 80rpx;
  text-align: center;
  background-color: #f3f3f3;
  line-height: 80rpx;
  color: #A4A4A4;
  border-radius: 6rpx;
}

.bottom {
  border-top: solid 1rpx #6CD096;
  width: 750rpx;
  align-items: center;
}

.delete {
  margin-left: 50rpx;
  width: 275rpx;
  height: 78rpx;
  background-color: #ffffff;
  color: #6CD096;
  font-size: 32rpx;
  line-height: 78rpx;
  text-align: center;
  border: solid 1rpx #6CD096;
  border-radius: 40rpx;
}

.update {
  margin-left: 100rpx;
  height: 80rpx;
  background-color: #6CD096;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
}

.popup_share {
  position: fixed;
  top: 0;
  z-index: 800;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  justify-content: center;
  align-items: center;
}

.icon_box {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 900rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  padding: 20rpx 0rpx;
  background-color: #ffffff;
}

.icon_box_add {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 800rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  padding: 20rpx 0rpx;
  background-color: #ffffff;
}

.autoleft {
  margin-left: auto;
}

.entry_txt {
  font-size: 48rpx;
  text-align: left;
  margin-left: 20rpx;
  width: 650rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.icon_item_add {
  margin: 10rpx 0rpx;
  align-items: center;
  width: 125rpx;
  height: 90rpx;
}

.edit_box {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 210rpx;
}

.editItem {
  background-color: #ffffff;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  width: 750rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}

.deleteItem {
  margin-top: 10rpx;
  background-color: #ffffff;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  width: 750rpx;
}